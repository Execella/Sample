
#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <time.h>
int main()
{
    srand(time(NULL));
    int i,j;
    float matris[6][4];
    for( i=0;i<6;i++){
        for(j=0;j<4; j++){
            matris[i][j]=(float)rand() / RAND_MAX;
        }
    }

for(i=0;i<6;i++){
        for( j=0;j<4; j++){
            printf("%.1f  ",matris[i][j]);
        }
        printf("\n");
    }
    printf("---------------\n");

for(i=0;i<4;i++){
        for( j=0;j<6; j++){
            printf("%.1f  ",matris[j][i]);
        }
        printf("\n");
    }


    return 0;
}